<% widgets.each do |widget| %>
 <div class="col-md-6 col-xl-4">
   <div class="image-box image-box--shadowed white-bg style-2 mb-4">
     <div class="overlay-container">
       <img src="<%= widget['user']['images']['large_url'] %>" alt="">
       <a href="#" class="overlay-link"></a>
     </div>
     <div class="body">
       <h5 class="font-weight-bold my-2"><%= widget['name']%></h5>
       <p class="small"><%= widget['description']%></p>
       <p>Create by: <%= widget['user']['name']%></p>
       <div class="row d-flex align-items-center">
         <%- if @current_user.present? && @current_user['id'] == widget['user']['id'] %>
           <div class="col-6">
             <ul class="social-links circle">
               <li class="facebook">
                <%= link_to edit_widget_path(widget['id'], widget: widget) do %>
                  <i class="fa fa-edit"></i>
                <%end%>
               </li>
               <li class="twitter">
                <%= link_to widget_path(widget['id']), method: :delete, data: {:confirm => "You sure you want to delete this widget?" } do %>
                  <i class="fa fa-trash"></i>
                <%end%>
               </li>
             </ul>
          </div>
         <% end %>
       </div>
     </div>
   </div>
 </div>
<% end %>
