<%= form_tag widgets_path do %>
   <div id = "formError" style="color: red"></div>
   <div class="form-group">
      <input type="text" class="form-control" name="user[name]" id="Name" placeholder="Name">
   </div>
   <div class="form-group">
      <input type="text" class="form-control" name="user[description]" id="description" placeholder="Description">
   </div>
   <div class="form-group">
     <input type="checkbox" name="user[kind]" id="kind"> Visiable?
   </div>

   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

   <div class="d-flex links justify-content-between">
      <button type="submit" class="btn btn-success" id="btnGetOffer">Save</button>
      <%= link_to 'Back', widgets_path, class: "btn btn-primary" %>
   </div>
<% end %>
