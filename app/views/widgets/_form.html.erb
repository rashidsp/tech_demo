<%= form_tag form_path, method: form_method do %>
   <% if widget.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(widget.errors.count, "error") %> prohibited this widget from being saved:</h2>

       <ul>
       <% widget.errors.each do |message| %>
         <li><%= message %></li>
       <% end %>
       </ul>
     </div>
   <% end %>
   <div id = "formError" style="color: red"></div>
   <div class="form-group">
      <input type="text" value= "<%= widget.name %>" class="form-control" name="widget[name]" id="Name" placeholder="Name">
   </div>
   <div class="form-group">
      <input type="text" value= "<%= widget.description %>" class="form-control" name="widget[description]" id="description" placeholder="Description">
   </div>
   <div class="form-group">
     <input type="checkbox" name="widget[kind]"> Visiable?
   </div>

   <input type="hidden" name="widget[id]" value="<%= widget.id %>">
   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

   <div class="d-flex links justify-content-between">
      <button type="submit" class="btn btn-success" id="btnGetOffer">Save</button>
      <%= link_to 'Back', widgets_path, class: "btn btn-primary" %>
   </div>
<% end %>
