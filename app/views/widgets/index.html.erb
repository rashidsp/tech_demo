<div class="container">
<section class="bg-light py-5">
        <div class="container">
          <div class="row justify-content-between">
            <div class="col-8">
              <div class="search-form">
                 <%= form_tag(root_path, method: :get, remote: true) do %>
                    <div class="input-group">
                      <%= text_field_tag :term, nil, placeholder: "Search", class: "form-control input-lg"%>
                      <%= submit_tag 'Search', class: "btn btn-primary ml-2" %>
                    </div>
                 <% end %>
               </div>
            </div>
            <button type="button" class="btn btn-info btn-round mr-3" data-toggle="modal" data-target="#loginModal">
              Login
            </button>
          </div>
          <br />
          <div id="items_grid" class="row">
            <%= render partial: 'widgets_list', locals: { widgets: @widgets}  %>
          </div>
        </div>
      </section>
</div>

<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-title text-center">
         <h1>Login</h1>
         <p class="text-muted">Sign In to your account</p>
        </div>
        <div class="d-flex flex-column text-center">
         <div class="container bootstrap snippet">
          <div class="row login-page">
            <div class="col-md-4 col-lg-4 col-md-offset-4 col-lg-offset-4">
              <img src="http://ani-theme.strapui.com/images/flat-avatar.png" class="user-avatar">
              <h1>Bootdey.com</h1>
              <form role="form" class="ng-pristine ng-valid">
               <div class="form-content">
                <div class="form-group">
                 <input type="text" class="form-control input-underline input-lg" placeholder="Email">
                </div>
                <div class="form-group">
                 <input type="password" class="form-control input-underline input-lg" placeholder="Password">
                </div>
               </div>
               <button class="btn btn-info btn-lg">
                            Log in
               </button> &nbsp;
               <button type="submit" class="btn btn-info btn-lg">Register</button>
              </form>
             </div>
            </div>
         </div>
        </div>
      </div>
    </div>
  </div>
</div>
