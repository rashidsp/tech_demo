<%= form_tag registration_path(@current_user['id']), method: :put, remote: true do %>
   <div id = "formError" style="color: red"></div>
   <div class="form-group">
       <input type="text" value="<%= @current_user['first_name'] %>" class="form-control" name="user[first_name]" id="first_name" placeholder="First Name">
   </div>
   <div class="form-group">
       <input type="text" class="form-control" value="<%= @current_user['last_name'] %>" name="user[last_name]" id="last_name" placeholder="Last Name">
   </div>
   <div class="form-group">
       <input type="text" class="form-control" value="<%= @current_user['email'] %>" name="user[email]" id="email" disabled placeholder="Email">
   </div>

   <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

   <div class="d-flex justify-content-center links">
      <button type="submit" class="btn btn-success form-control" id="btnGetOffer">Save</button>
   </div>
<% end %>
