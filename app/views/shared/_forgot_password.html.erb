<%= form_tag reset_password_sessions_path, remote: true do %>
    <div id = "formError" style="color: red"></div>
    <div class="form-group">
        <input type="text" class="form-control" name="user[email]" id="email" required="" placeholder="Email">
    </div>

    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

    <div class="d-flex justify-content-center links">
       <button type="submit" class="btn btn-success form-control" id="btnGetOffer">Send</button>
    </div>

    <div class="mt-4">
      <div class="d-flex justify-content-center links">
       Go to <%= link_to 'Login', new_session_path, method: :get, class: 'ml-2 text-primary', :remote => true %>
      </div>
    </div>
<% end %>
